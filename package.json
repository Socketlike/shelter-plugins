{
  "scripts": {
    "check": "tsc --noEmit",
    "eslint:check": "eslint ./plugins",
    "prettier:check": "prettier -c ./plugins",
    "prettier:fix": "prettier -w ./plugins",
    "lint": "pnpm run prettier:check && pnpm run eslint:check && pnpm run check",
    "ci": "lune ci",
    "postci": "node scripts/createIndex.js"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "@uwu/lune": "^1.2.1",
    "@uwu/shelter-defs": "^1.1.0",
    "eslint": "^9.1.1",
    "eslint-config-dmitmel": "github:dmitmel/eslint-config-dmitmel",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  },
  "type": "module",
  "workspaces": [
    "plugins/*"
  ]
}
